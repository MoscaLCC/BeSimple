doctype html
html
  head
    title= "Be Simple"
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/w3.css')
  body(class='inical-page')
    <!-- Top Bar -->
    header(class="w3-panel w3-teal w3-card-4")
      center
        table
          tr
            tdtd(align="center")
              h1="Be Simple Store"
            td(align="right")
              a(class="w3-btn w3-round-large" href="/"): img(src="/images/home.png" style="height:25px;width:25px;")             
    table(style="width:100%; height:100%")
      tr
        <!-- Side Bar -->
        td(style="width:20%; background-color:#AFF1CC;vertical-align:top;")
          center
            img(src="images/besimple.gif" style="width:200px;height:150px;")
            h1="Be Simple"
            hr
            table
              tr
                td
                  input(class="w3-input w3-border w3-white w3-round-large" type="text" placeholder="REFERENCIA" id="pesquisa")
                td
                  button(class="w3-btn w3-border w3-border-teal w3-round-large" onclick="pesquisa()"): img(src="/images/lupa.png" style="height:25px;width:25px;")
            hr
            h3="Lucro Total:"
            h5="--,--"
            h3="Lucro Estimado:"
            h5="--,--"
            hr
            a(class="w3-button w3-teal w3-border w3-transparency-min" style="width:100%;" href="/registarencomenda")="Adicionar Encomenda"
            a(class="w3-button w3-teal w3-border w3-transparency-min" style="width:100%;" href="/concluidas")="Encomendas Concluidas"
            a(class="w3-button w3-teal w3-border w3-transparency-min" style="width:100%;" href="/")="Encomendas Pendentes"

        <!-- Body -->
        td(style="width:80%;vertical-align:top;")
          block content
